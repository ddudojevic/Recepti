<%- include('includes/head.ejs') %>
<link rel="stylesheet" href="/css/recipes.css">
</head>
<body>

<%- include('includes/nav.ejs')  %>

<div class="list">
  <% if (recipes.length === 0) { %>
    <h1 class="list_header">Nema recepata</h1>
  <% } else { %>
   <% let sortText = "NAJLAJKOVANIJI RECEPTI"; %>
   <% if (sortOption === 'createdAt') { %>
     <% sortText = "NAJNOVIJI RECEPTI"; %>
   <% } %>
   <h1 class="list_header"><%= sortText %></h1>
    <form action="/recepti" method="get" class="sort">
      <select name="sort" class="sort_select">
        <option value="likes" <% if (sortOption === 'likes') { %>selected<% } %>>najlajkovaniji</option>
        <option value="createdAt" <% if (sortOption === 'createdAt') { %>selected<% } %>>najnoviji</option>
      </select>
      <button type="submit" class="sort_btn">Sortiraj</button>
    </form>
  <% } %>
  <% for (const recipe of recipes) { %>
    <ul class="list_list">
      <%- include('includes/recipe.ejs', {recipe: recipe, categories: categories} ) %>
    </ul>
  <% } %>
</div>
</body>  

</html>